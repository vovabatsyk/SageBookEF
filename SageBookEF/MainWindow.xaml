        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Menu Height="25" VerticalAlignment="Top">
            <MenuItem Header="Sage">
                <MenuItem Header="New" Click="SageAdd_OnClick"></MenuItem>
                <MenuItem Header="Edit" Click="SageEdit_OnClick"></MenuItem>
